<div class="left-part">
  <a href="/" class="logo sprite sprite-logo"></a>
  <h1>BE IN THE KNOW</h1>

  <p>
    Youâ€™ll be the first to hear about new arrivals, trends and exclusive offers (including special welcome deal!) when you sign up for Gap emails. 
  </p>


  <div id="like-wrap">
    <div class="fb-like" data-href="http://gapnew.com/" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
  </div>

  <form action="/" method="POST" id="send-form">
    <%= Rack::Csrf.tag(env) %>
    
    <div class="form-line">
      <label for="name">Name:</label>
      <input id="name-field" type="text" name="name" placeholder="Please enter your name" value="<%= req["name"] %>" data-err-type="field" data-validation-msg="name"/>
      <span class="error-field"></span>
    </div>

    <div class="form-line">
      <label for="mobile">Mobile Number:</label>
      <input id="mobile-field" type="text" name="mobile" placeholder="Please enter your phone number" value="<%= req["mobile"] %>" data-err-type="mobile" data-validation-msg="mobile"/>
      <span class="error-field"></span>
    </div>
    
    <div class="form-line">
      <label for="email">Email address:</label>
      <input id="email-field" type="text" name="email" placeholder="Please enter your email address" value="<%= req["email"] %>" data-err-type="email" data-validation-msg="email" class="<%= @user.errors[:email][:class] %>"/>
      <span class="error-field"><%= @user.errors[:email][:message] %></span>
    </div>
    
    <div class="form-line">
      <label for="email_confirmation">Please confirm your email address:</label>
      <input id="email_confirmation-field" type="text" name="email_confirmation" placeholder="Please confirm your email address" data-err-type="email_confirmation" data-bind="#email-field" data-validation-msg="email_confirmation"/>
      <span class="error-field"></span>
    </div>

    <div class="form-line">
      <label for="interests">Interests:</label>
      <input type="checkbox" name="interests[]" value="Games" />Games<br />
      <input type="checkbox" name="interests[]" value="Live events" />Live events<br />
      <input type="checkbox" name="interests[]" value="Movies" />Movies<br />
      <input type="checkbox" name="interests[]" value="Music" />Music<br />
      <input type="checkbox" name="interests[]" value="Reading" />Reading<br />
      <input type="checkbox" name="interests[]" value="Fitness" />Fitness<br />
      <input type="checkbox" name="interests[]" value="Arts" />Arts<br />
      <input type="checkbox" name="interests[]" value="Travel" />Travel<br />
      
      <span class="error-field"></span>
    </div>

    <div class="form-line">
      <label for="address">Address:</label>
      <input id="address-field" type="text" name="address" placeholder="Please enter your address" value="<%= req["address"] %>" data-err-type="field" data-validation-msg="address"/>
      <span class="error-field"></span>
    </div>

    <div class="form-line">
      <label for="country">Country:</label>
      
      <select name="country">
        <option value="">Please select your country</option>
        <option value="volvo">Volvo</option>
        <option value="saab">Saab</option>
        <option value="mercedes">Mercedes</option>
        <option value="audi">Audi</option>
      </select>

      <span class="error-field"></span>
    </div>

    <div class="form-line">
      <label for="city">City:</label>
      
      <select name="city">
        <option value="">Please select your city</option>
        <option value="volvo">Volvo</option>
        <option value="saab">Saab</option>
        <option value="mercedes">Mercedes</option>
        <option value="audi">Audi</option>
      </select>

      <span class="error-field"></span>
    </div>
    
    <div class="form-line">
      <input type="submit" value="UPLOAD &nbsp; &#9654;"/>
    </div>
    
